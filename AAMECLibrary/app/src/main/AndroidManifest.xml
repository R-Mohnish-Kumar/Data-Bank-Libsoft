<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mkr.aameclibrary">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_databank_libsoft_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_databank_libsoft_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AAMECLibrary">
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="MainActivity"
            android:windowSoftInputMode="adjustNothing"
            android:theme="@style/Theme.AAMECLibrary.NoActionBar"/>

        <activity
            android:name=".Admin.ui.books.BookIssuePopWindowActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustNothing"
            android:theme="@style/Theme.AAMECLibrary.CustomTheme" />
        <activity
            android:name=".Student.StudentHomeActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustNothing"
            android:label="@string/title_activity_student_home"
            android:theme="@style/Theme.AAMECLibrary.NoActionBar" />
        <activity
            android:name=".Staff.StaffHomeActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustNothing"
            android:label="@string/title_activity_staff_home"
            android:theme="@style/Theme.AAMECLibrary.NoActionBar" />
        <activity
            android:name=".Admin.AdminHomeActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustNothing"
            android:label="@string/title_activity_admin_home"
            android:theme="@style/Theme.AAMECLibrary.NoActionBar" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>